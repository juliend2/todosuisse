<p id="notice"><%= notice %></p>

<h1>Task Templates</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Repeating interval</th>
      <th>From day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_templates.each do |task_template| %>
      <tr>
        <td><%= task_template.description %></td>
        <td><%= task_template.repeating_interval %></td>
        <td><%= task_template.from_day %></td>
        <td><%= link_to 'Show', task_template %></td>
        <td><%= link_to 'Edit', edit_task_template_path(task_template) %></td>
        <td><%= link_to 'Destroy', task_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Template', new_task_template_path %>
